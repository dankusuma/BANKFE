@{
    string username = (string)ViewData["username"];
}
<style>
    #sidebar {
        background-color: #44a3f1;
    }

    .nav-item-link {
        text-decoration: none;
        color: rgba(245, 245, 245, 0.5);
    }

        .nav-item-link:hover {
            text-decoration: none;
            color: rgba(245, 245, 245, 1);
        }

    .dark-nav-item-link {
        text-decoration: none;
        color: #121012;
    }

    .dark-nav-item-link:hover {
        text-decoration: none;
        color: #151a15;
    }

    .img-sidebar {
        height: 60px;
        width: auto;
        margin-right: 1rem;
        padding: 5px 0;
    }
