<nav id="sidebar" class="col-md-2 d-none d-md-block sidebar-sticky fixed-right min-vh-100">
    <div class="sidebar-sticky">
        <div class="flex-row justify-content-between m-2 text-light">
            <a class="text-decoration-none"
               style="cursor:pointer; color: inherit">
                <img src="~/images/temp_img.jpg" alt="temp icon" class="col img-sidebar" />
                <label class="text-weight-bolder">Bank App</label>
            </a>
            @*<em class="bi bi-three-dots-vertical float-right pt-3"></em>*@
        </div>
        <hr />

        <div class="m-lg-2">
            <ul class="list-group">
                <li class="mb-3"><a class="nav-item-link" asp-controller="Home" asp-action="Index"><em class="bi bi-house-door-fill mx-3"></em>Dashboard</a></li>
                <li class="mb-3"><a class="nav-item-link" asp-controller="Home" asp-action="NotReadyPage"><em class="bi bi-journal mx-3"></em>Menu 1</a></li>
                <li class="mb-3"><a class="nav-item-link" asp-controller="Home" asp-action="NotReadyPage"><em class="bi bi-journal mx-3"></em>Menu 2</a></li>
                <li class="mb-3"><a class="nav-item-link" asp-controller="Home" asp-action="NotReadyPage"><em class="bi bi-journal mx-3"></em>Menu 3</a></li>
