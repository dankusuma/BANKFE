                <li class="mb-3">
                    <a href="@Url.Action("Index", "ChangePassword", new { mode = "change", username = username })" class="nav-item-link">
                        <em class="bi bi-file-earmark-lock2-fill mx-3"></em>
                        Change Password
                    </a>
                </li>
                <li class="mb-3">
                    <a href="@Url.Action("Index", "PIN", new { mode = "edit", username = username })" class="nav-item-link">
                        <em class="bi bi-grid-3x3-gap mx-3"></em>
                        Change PIN
                    </a>
                </li>
                <li class="mb-3">
                    <a class="nav-item-link" asp-action="LogOut" asp-controller="Login">
                        <em class="bi bi-arrow-return-right mx-3"></em>
                        Logout
                    </a>
                </li>
                @*@Html.ActionLink("Change Password", "Index", "ChangePassword", new { mode = "change", username = username })
