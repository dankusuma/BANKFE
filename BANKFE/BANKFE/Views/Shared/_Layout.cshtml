<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BANKFE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>

<!-- TODO: later, please change this timer to 10 minutes -->
<body class="row" style="background-color: #f2f3fa;" onload="JavaScript: timedRefresh(60000)">
    <!-- add timer for 1 minutes -->
    <partial name="UI/_Sidebar" />
    <div class="col p-0">
        <partial name="UI/_Header" />
        <div class="container">
            <main role="main" class="pb-1">
                @RenderBody()
            </main>
        </div>
        <partial name="UI/_Footer" />
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script type="text/javascript">
        var timeOut;
        var timer = 0;

        const timedRefresh = (timeoutPeriod) => {
            timer = timeoutPeriod;
            timeOut = setTimeout(DoLogout, timeoutPeriod);
        }

        const cancelTimeOut = () => {
            console.log('cancel timer, reset time to start again...');
            clearTimeout(timeOut);

            if (timer <= 0) return;
            timedRefresh(timer);
        }

        const DoLogout = () => {
            console.log("Time out...\nLogging out");
            window.location.href = "/Login/LogOut"
        }
    </script>
</body>
</html>